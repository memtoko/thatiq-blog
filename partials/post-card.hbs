{{!--
Re-usable card for linking to posts
--}}

<article class="post-card sh-card {{post_class}}">
  {{#if feature_image}}
    <div class="sh-card--media">
      <a class="post-card-image-link" href="{{url}}">
      {{!-- This is a responsive image, it loads different sizes depending on device
      https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
      <img class="post-card-image"
          srcset="{{img_url feature_image size="s"}} 300w,
                  {{img_url feature_image size="m"}} 600w,
                  {{img_url feature_image size="l"}} 1000w,
                  {{img_url feature_image size="xl"}} 2000w"
          sizes="(max-width: 1000px) 400px, 700px"
          src="{{img_url feature_image size="m"}}"
          alt="{{title}}"
      />
    </a>
    </div>
  {{/if}}
  <header class="post-card-header">
    <div class="sh-card--title">
      <a class="post-card-link" href="{{url}}">
        <h2 class="sh-card--title-text">{{title}}</h2>

        {{#if primary_tag}}
          <span class="sh-card--subtitle-text">{{primary_tag.name}}</span>
        {{/if}}
      </a>
    </div>
  </header>
  <section class="post-card-excerpt sh-card--supporting-text">
    <p>{{excerpt words="33"}}</p>
  </section>
</article>

{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
<div class="inner">
  {{#is "home"}}
    {{#if @site.description}}
    <header class="page-head">
      <h2 class="page-head-title">{{@site.description}}</h2>
    </header>
    {{/if}}
  {{/is}}
  <div class="sh-grid">
    <div class="post-feed sh-cell sh-cell--8-col">
      {{#foreach posts}}

        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{> "post-card"}}

      {{/foreach}}
    </div>

    <aside class="sh-cell sh-cell--4-col">
      {{!-- Email subscribe form at the bottom of the page --}}
      {{#if @labs.subscribers}}
      <section class="subscribe-form">
        <h3 class="subscribe-form-title">Subscribe to {{@site.title}}</h3>
        <p>Get the latest posts delivered right to your inbox</p>
        {{subscribe_form input_class="sh-input" button_class="sh-btn sh-btn-brown" placeholder="youremail@example.com"}}
      </section>
      {{/if}}
    </aside>
  </div>
</div>